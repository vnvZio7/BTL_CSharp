@model IEnumerable<MvcLuat.Models.Chapter>

@foreach(var item in Model)
{

    <div class="li_con" onclick="hienThiNoiDung('@item.ID')">@item.Title
         <i class="fa-solid fa-caret-down"></i>
    </div>
    <div id = '@item.ID' style="display: none;" >
         @await Component.InvokeAsync("indexArticle",new {id = item.ID})
    </div>
}
