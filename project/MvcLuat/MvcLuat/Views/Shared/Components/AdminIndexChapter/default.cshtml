@model IEnumerable<MvcLuat.Models.Chapter>

@foreach(var item in Model)
{

    <div class="li_con" onclick="hienThiNoiDung('@item.ID')">@item.Title
         <i class="fa-solid fa-caret-down"></i>
         <div class="box_box">
                    <a class="edit_but" href="/Admin/ChapterEdit/@(item.ID)">Chỉnh sửa</a>
                    <!-- <br> -->
                    <a class="delete_but" href="/Admin/ChapterDelete/@(item.ID)">Xóa</a>
          </div>
    </div>
    <div id = '@item.ID' style="display: none;" >
         @await Component.InvokeAsync("AdminIndexArticle",new {id = item.ID})
    </div>
}
